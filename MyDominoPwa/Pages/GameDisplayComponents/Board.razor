@using MyDominoPwa.DominoModel
@inject GlobalState<int> GlobalState
<div class="container" style="align-content: center;width: 100%;height: 100%">
		<table style="margin:0;position: relative;">
			<tr>
				@if (GameState is not null && GameState!.Turn is not -1) {
					<Row Branch="@(new DualBoardTree<int>(GameState).LeftChild)" Inverted="@true"></Row>
					<Row Branch="@(new DualBoardTree<int>(@GameState).@RightChild)"></Row>
				}
			</tr>
		</table>
	</div>

@code {
	[Parameter, EditorRequired]
	public GameState<int>? GameState { get; set; }
}